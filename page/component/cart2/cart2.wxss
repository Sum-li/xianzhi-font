/* page/component/cart2/cart2.wxss */
@import "../../common/iconfont.wxss";
::-webkit-scrollbar{
    width:0;
    height: 0;
    color: transparent;
  }


.orders-box {
    color: #999;
    font-size: 28rpx;
}

.orders {
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
    text-align: center;
}

.orders-list {
    padding-left: 30rpx;
    background-color: #fff;
    border-bottom: 20rpx solid #ededed;
}

.orders-list:last-child {
    border-bottom: 0;
}

.list-name {
    display: -webkit-box;
    width: 350rpx;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
}

.orders-number {
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
}

.orders-detail {
    position: relative;
    height: 120rpx;
    padding: 35rpx 20rpx 35rpx 170rpx;
    border-bottom: 1rpx solid #e9e9e9;
}

.orders-detail image {
    position: absolute;
    left: 0;
    top: 20rpx;
    width: 150rpx;
    height: 150rpx;
}

.orders-detail view {
    line-height: 60rpx;
}

.orders-detail .orders-status {
    position: absolute;
    right: 20rpx;
    top: 35rpx;
    height: 120rpx;
    line-height: 120rpx;
    color: #b42f2d;
}

.orders-footer {
    height: 60rpx;
    line-height: 60rpx;
    color: #2f2f2f;
    padding: 15rpx 30rpx 15rpx 0;
}

.orders-footer .orders-btn {
    float: right;
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 6rpx;
    padding: 0;
    /* background: #b42f2d; */
    /* color: #fff; */
    margin: 0 10rpx;
}





.main {
    width: 100%;
}

.iconfont {
    color: gray;
}

.main {
    /* padding-top: 10rpx; */
}

.category-btn {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: left;
    overflow: hidden;
    background-color: transparent;
}

textarea {
    width: 100%;
    font-size: 30rpx;
    min-height: 300rpx;
    /* text-indent:12rpx */
}

button::after {
    border: none;
}

.price {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 5px 14px;
    text-align: left;
    overflow: hidden;
    background-color: transparent;
    border: 0px solid snow;
}

.panel {
    background-color: white;
    /* width: 95%; */
    /* border-radius: 2px; */
    /* margin: 30rpx auto ; */
    padding: 20rpx 5px;
    /* box-shadow: 0 4rpx 8rpx 0 rgba(0,0,0,0.20); */
    overflow: hidden;
}

.div-line {
    background: #E0E3DA;
    width: 91%;
    margin: 0 auto;
    height: 3rpx;
}



/* 文字描述部分 */
.message {
    position: relative;
    border-bottom: 10rpx solid #ededed;

}

.title {
    height: 70rpx;
}

.detail {
    height: 300rpx;
}

.quickinput {
    width: 95%;
    /* position: absolute; */
    /* bottom: 10rpx; */
    margin: 0 auto;
    z-index: 100;
    font-size: 28rpx;
    /* overflow-x: scroll; */
}

/* 图片预览部分 */
.good-images {
    min-height: 200rpx;
}

.images-hint {
    text-align: center;
}

.add-img {
    background-color: transparent !important;
    /* color: #eeeeee !important; */
    display: block;
    margin: 0 auto;
    padding: 0;
    height: 200rpx;
    width: 200rpx;
}

.add-img image {
    height: 200rpx !important;
    width: 200rpx !important;
}

.image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 4rpx;
}

.image-wrap {
    position: relative;
    display: inline-block;
    margin: 20rpx 21rpx;

}

.image-remover {
    position: absolute;
    right: 15rpx;
    top: -5rpx;
    /* width: 20rpx; */
    /* height: 20rpx; */
    transform: scale(1.8)
}

.image-opera button {
    font-size: 0
}





/* 选择分类部分 */

.text-placeholder {
    color: rgb(143, 143, 143);
    font-size: 0.8rem;
    /* position: absolute; */
    /* right: 0rpx; */
}

.submit {
    display: block;
    /* position: fixed; */
    /* bottom: 10rpx; */
    margin-top: 10rpx;
    width: 100%;
    background-color: white;
    border-radius: 10rpx;

}

.submit-btn {
    background-color: rgba(255, 255, 255, 1);
    /* color:#004461; */
    color: rosybrown;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80rpx;
}

.submit-btn image {
    width: 50rpx;
    height: 50rpx;
}

.icon-fabu {
    color: rosybrown;
    /* font-size: 55rpx; */
}

.price-btn-left {
    width: 80%;
}

.model-close{
    padding: 0;
    position: fixed;
    left:620rpx;
    top:150rpx;    
    border-radius: 50%;
    width:60rpx;
    height:60rpx;
    z-index: 100;
}

.bottom{
    height: 60rpx;
